# ==============================================================================
# Manul Core Admin - Environment Configuration
# ==============================================================================
#
# Copy this file to .env and customize for your environment.
# NEVER commit .env to version control!
#
# ==============================================================================

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================

# Environment (development, staging, production)
PUBLIC_ENV=development

# Application name
PUBLIC_APP_NAME=Manul Core Admin

# Application version
PUBLIC_APP_VERSION=0.1.0

# ==============================================================================
# API CONFIGURATION
# ==============================================================================

# Backend API URL (the Rust backend)
PUBLIC_API_URL=http://localhost:8080

# Admin API base path
PUBLIC_API_BASE=/api/admin

# API timeout in milliseconds
PUBLIC_API_TIMEOUT=30000

# ==============================================================================
# AUTHENTICATION
# ==============================================================================

# Admin Secret (must match backend ADMIN_SECRET)
# This is sent in X-Admin-Secret header
ADMIN_SECRET=change_this_admin_secret_in_production

# Session timeout in minutes
PUBLIC_SESSION_TIMEOUT=30

# Enable TOTP (Two-Factor Authentication)
PUBLIC_TOTP_ENABLED=true

# Enable Hardware Key (WebAuthn/FIDO2)
PUBLIC_HARDWARE_KEY_ENABLED=true

# ==============================================================================
# SECURITY
# ==============================================================================

# Rate limiting (requests per minute)
PUBLIC_RATE_LIMIT=60

# Enable device fingerprinting
PUBLIC_FINGERPRINT_ENABLED=true

# Maximum failed login attempts before lockout
PUBLIC_MAX_LOGIN_ATTEMPTS=5

# Lockout duration in minutes
PUBLIC_LOCKOUT_DURATION=15

# ==============================================================================
# FEATURES FLAGS
# ==============================================================================

# Enable real-time updates via WebSocket
PUBLIC_WEBSOCKET_ENABLED=true

# WebSocket URL (for real-time updates)
PUBLIC_WS_URL=ws://localhost:8080/ws

# Enable dark mode by default
PUBLIC_DARK_MODE=true

# Enable audit logging in console
PUBLIC_DEBUG_AUDIT=false

# ==============================================================================
# MONITORING
# ==============================================================================

# Enable Sentry error tracking (optional)
PUBLIC_SENTRY_DSN=

# Enable performance monitoring
PUBLIC_PERFORMANCE_MONITORING=true

# ==============================================================================
# UI CONFIGURATION
# ==============================================================================

# Default page size for tables
PUBLIC_DEFAULT_PAGE_SIZE=20

# Chart refresh interval (seconds)
PUBLIC_CHART_REFRESH_INTERVAL=30

# Dashboard auto-refresh interval (seconds)
PUBLIC_DASHBOARD_REFRESH_INTERVAL=60

# ==============================================================================
# DEPLOYMENT (for Docker/K8s)
# ==============================================================================

# Node environment
NODE_ENV=development

# Server port (for SSR)
PORT=5173

# Host (for SSR)
HOST=0.0.0.0

# Origin URL (for CORS in SSR mode)
ORIGIN=http://localhost:5173

# ==============================================================================
# BUILD CONFIGURATION
# ==============================================================================

# Enable source maps in production
VITE_SOURCEMAP=false

# Build mode
VITE_BUILD_MODE=development

# ==============================================================================
# END OF CONFIGURATION
# ==============================================================================
